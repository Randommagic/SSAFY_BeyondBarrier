<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.preference.PreferenceCategory
        android:title="설정"
        android:layout="@layout/fragment_settings"
        android:focusable="false"
        android:importantForAccessibility="no"
        android:selectable="false"
        >


    <androidx.preference.ListPreference

        android:key="tts_speed"
        android:title="TTS 속도"
        android:summary="TTS 기능의 속도 설정"
        android:entries="@array/tts_speed_entry"
        android:entryValues="@array/tts_speed_values"
        android:defaultValue="1.0"
        android:icon="@drawable/ic_tts_speed"
        />


    <androidx.preference.ListPreference
        android:key="captioning_lang"
        android:title="화면 해설 언어"
        android:summary="화면 해설 기능의 언어 설정"
        android:entries="@array/captioning_lang_entry"
        android:entryValues="@array/captioning_lang_values"
        android:defaultValue="ko"
        android:icon="@drawable/ic_font_size"
        />


    <androidx.preference.SwitchPreference
        android:key="captioning_auto"
        android:summary="연속적으로 화면 해설하는 기능을 설정할 수 있습니다."
        android:title="연속 화면 해설"
        />

    </androidx.preference.PreferenceCategory>


</androidx.preference.PreferenceScreen>